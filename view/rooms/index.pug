doctype html
html
  head
    title Refocus Room
    link(rel='shortcut icon', href='favicon.ico')
    link(rel='stylesheet', type='text/css', href='../static/css/salesforce-lightning-design-system.min.css')
  body
    div.slds-page-header
      div.slds-grid
        div.slds-cols.slds-has-flexi-truncate
          div.slds-media.slds-no-space.slds-grow
            div.slds-media__body
              h1#title.slds-page-header__title.slds-m-right--small.slds-align-middle
              p#subTitle.slds-text-body_small.slds-line-height_reset
    div
      div#botsContainer.slds-grid.slds-grid_align-space.slds-wrap
    div#loading_spinner
      .slds-spinner_container
        .slds-spinner--brand.slds-spinner.slds-spinner--medium(role='alert')
          span.slds-assistive-text Loading
          .slds-spinner__dot-a
          .slds-spinner__dot-b
  script(src='http://localhost:5000/public/refocus-bdk.js')
  script(src='/static/scripts/jquery-1.11.1.min.js')
  script(src='/static/scripts/moment.min.js')
  script.
    var trackingId = '#{trackingId}';
    var ROOMID = window.location.pathname.split('rooms/').length > 1 ? parseInt(window.location.pathname.split('rooms/')[1]) : 1;
    pollingUI('http://localhost:3000/v1/', 'events', null);
    pollingUI('http://localhost:3000/v1/', 'botActions', { 'isPending' : 'false' });
    pollingUI('http://localhost:3000/v1/', 'rooms/'+ROOMID+'/bots/'+'3c6d4128-adf2-40f4-a1c4-ea704f7eafae'+'/data', null);
    pollingUI('http://localhost:3000/v1/', 'rooms/'+ROOMID, null);
  script(src='/static/analytics/app.js')
  script(src='/static/rooms/app.js')